<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".DetailActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textSize="18sp"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/name_detail"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/status"
                    android:textSize="18sp"
                    android:layout_below="@+id/tv_name"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/status_detail"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name_detail"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_specie"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/specie"
                    android:textSize="18sp"
                    android:layout_below="@id/tv_status"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/specie_detail"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/status_detail"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:textSize="18sp"
                    android:layout_below="@id/tv_specie"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/gender_detail"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/specie_detail"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"/>
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>